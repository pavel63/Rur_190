<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_quotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hours_time_tv"
                tools:text="12-13"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="6">

                <View
                    android:id="@+id/after_main_decor"
                    android:background="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="10dp"
                    android:layout_height="2dp"/>

                <RelativeLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/main_body_placement"
                    android:layout_toEndOf="@id/after_main_decor"
                    android:background="@drawable/frame"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/hour_row_task_name"
                    tools:text="dffjfkjfkjfkjfkdjdjfkfjkjkdfdkfjdfjdf"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                </RelativeLayout>

                <View
                    android:id="@+id/before_main_decor"
                    android:background="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/main_body_placement"
                    android:layout_width="10dp"
                    android:layout_height="2dp"/>

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>