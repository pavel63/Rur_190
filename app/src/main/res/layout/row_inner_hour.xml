    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main_content_inner_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/inner_hour_iv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/ic_launcher"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/inner_hour_tv"
            tools:text="dfddfdfdfd"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>